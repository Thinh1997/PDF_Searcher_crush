<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <!-- Disable warning for .NET target getting to the end of life -->
    <CheckEolTargetFramework>false</CheckEolTargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="../../../Lib/PDFNetC.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\LicenseKey\CS\LicenseKey.cs" Link="LicenseKey.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <Reference Include="PDFTronDotNet">
      <HintPath>..\..\..\Lib\netcoreapp2.1\PDFTronDotNet.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
